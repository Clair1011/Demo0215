@model Demo0215.Models.EmployeeModels
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@if (Model == null)
{
    <label class="label-danger">請輸入正確的電腦編號</label>
}
else
{

    <div class="row row-cols-2"> @Html.LabelFor(model => model.EmpNo)</div>
    <div><input type="text" id="txtEmpNo" value="@Model.EmpNo" readonly /></div>
    <div class="row row-cols-2">@Html.LabelFor(model => model.Name)</div>
    <div><input type="text" id="txtName" value="@Model.Name"  /></div>
    <div class="row row-cols-2">@Html.LabelFor(model => model.Exp)</div>
    <div><input type="text"  id="txtExp" value="@Model.Exp"  /></div>


    <input class="btn btn-primary" type="button" value="修改" onclick="EdisEmp()" />

    @section Scripts {
        <script>
            function EdisEmp() {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("EditPost")',
                    data: { 'EmpNo': $("#txtEmpNo").val(), 'Name': $("#txtName").val(), 'Exp': $("#txtExp").val() },
                    success: function (r) {
                        if (r.IsSuccess) {
                            alert('ok');
                        }
                        else {
                            alert(r.Msg);
                        }

                    },
                    error: function (a, b, c) {
                        console.log(a);
                        console.log(b);
                        console.log(c);
                    }
                });
            }
        </script>
        }

}





